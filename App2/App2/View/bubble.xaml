<UserControl
    x:Class="WeChat.bubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeChat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <local:Media Grid.Column="1" x:Name="media" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" Visibility="Collapsed"/>
        <Image VerticalAlignment="Top" Grid.Column="0"  x:Name="img" Height="40" Width="40" Margin="0,10,0,0"/>
        <Image VerticalAlignment="Top" Grid.Column="1" x:Name="img_meg" Height="auto" Width="auto" Margin="0,30,0,0" Visibility="Collapsed"/>
        <TextBlock x:Name="NickName" Grid.Column="1" VerticalAlignment="Top" Margin="0, 10, 0, 0"/>
        <local:bubbleleft Grid.Column="1" x:Name="left" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
    </Grid>
</UserControl>
